<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.snarfed.android.openinapp"
      android:versionCode="2"
      android:versionName="1.0.1">
    <application android:label="@string/app_name" android:icon="@drawable/u_turn">

        <activity android:name="Facebook">
            <!-- From http://stackoverflow.com/questions/6179776 -->
            <intent-filter>
              <action android:name="android.intent.action.VIEW" />
              <category android:name="android.intent.category.DEFAULT" />
              <category android:name="android.intent.category.BROWSABLE" />
              <data android:scheme="http" />
              <data android:scheme="https" />
              <data android:host="facebook.com" />
              <data android:host="www.facebook.com" />
            </intent-filter>
        </activity>

        <activity android:name="MobileTwitter">
            <intent-filter>
              <action android:name="android.intent.action.VIEW" />
              <category android:name="android.intent.category.DEFAULT" />
              <category android:name="android.intent.category.BROWSABLE" />
              <data android:scheme="http" />
              <data android:scheme="https" />
              <data android:host="mobile.twitter.com" />
            </intent-filter>
        </activity>

